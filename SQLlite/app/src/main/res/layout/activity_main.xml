<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/nombre"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="nombre" />

    <EditText
        android:id="@+id/precio"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nombre"
        android:ems="10"
        android:hint="precio"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/guardar"
        android:layout_width="142dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="3dp"
        android:layout_toRightOf="@id/precio"
        android:text="Guardar" />

    <Button
        android:id="@+id/ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guardar"
        android:layout_alignEnd="@id/guardar"
        android:layout_alignParentEnd="true"
        android:text="Ver" />

    <TextView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ver"
        android:text="TextView" />

    <Button
        android:id="@+id/buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre"
        android:layout_toRightOf="@id/borrar"
        android:text="buscar" />

    <Button
        android:id="@+id/borrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/precio"
        android:text="borrar" />

    <Button
        android:id="@+id/modificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre"
        android:layout_toLeftOf="@id/ver"
        android:layout_toRightOf="@id/buscar"
        android:text="mod" />
</RelativeLayout>